global class UpdateAttempt {
    public class CheckParamsException extends Exception {}
    public class NotFoundCampaignMemberException extends Exception {}

    global class UpdateAttemptRequest{
        global String campaignMemberId;
        // global String dialerContactListId;
        //global Integer attempt;
    }

    global class UpdateAttemptResponse{
        global String status;
        global String message;
    }
    @HttpPost
    global static UpdateAttemptResponse updateAttempt(UpdateAttemptRequest updateAttemptRequest){
        
        UpdateAttemptResponse response= new UpdateAttemptResponse();
        RestResponse res;
        RestRequest req;
        Savepoint sp= Database.setSavepoint();

        try{
            checkRequiredParameter(updateAttemptRequest);
            CampaignMember cm= searchCampaignMember(updateAttemptRequest.campaignMemberId);
            process(cm);
            response.status='OK';
            response.message='Operazione Completata con successo';
            return response;
        }
        catch(CheckParamsException e){
            Database.rollback(sp);
            response.status='KO';
            response.message=e.getMessage();
            return response;
        }
        catch(NotFoundCampaignMemberException e){
            Database.rollback(sp);
            response.status='KO';
            response.message=e.getMessage();
            return response;
        }
        catch(Exception e){
            Database.rollback(sp);
            response.status='KO';
            response.message=e.getMessage();
            return response;
        }
    }

    private static void checkRequiredParameter(UpdateAttemptRequest input){
        List<String> missingParams= new List<String>();
        if(String.isBlank(input.campaignMemberId)){
            missingParams.add('campaignMemberId');
        }
        /*if(String.isBlank(input.dialerContactListId)){
            missingParams.add('dialerContactListId');
        }*/
        /*if(input.attempt==null){
            missingParams.add('attempt');
        }*/

        if(missingParams.size()>0){
            throw new CheckParamsException('Mancano i seguenti parametri mandatori: '+String.join(missingParams, ', '));
        }
    }

    private static CampaignMember searchCampaignMember(String campaignMemberId){
        List<CampaignMember> cmList=[SELECT Id,CRM_NumeroTentativi__c FROM CampaignMember WHERE Id=: campaignMemberId];
        if(cmList.size()==0){
            throw new NotFoundCampaignMemberException('Campaign Member non trovato');
        }
        return cmList[0];
    }
    private static void process(CampaignMember cm){
        if(cm.CRM_NumeroTentativi__c==null){
            cm.CRM_NumeroTentativi__c = 1;
        }
        else{
            cm.CRM_NumeroTentativi__c += 1;
        }
        
        update cm;
    }
    
