<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage">
            <property name="title" type="String" label="Title list view" description="definisci il titolo della listView"/>
            <property name="iconName" type="String" label="Icona" description="definisci l'icona della listView"/>
            <property name="showNF" type="Boolean" default="false"/>
            <property name="numberOfRows" type="Integer" label="Numero di righe" description="definisci il numero di righe che vuoi mostrare"/>
            <property name="defaultLimit" type="Integer" label="Numero elementi per pagina" description="Se vuoto verrannomostarti 15 elementi per pagina"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>